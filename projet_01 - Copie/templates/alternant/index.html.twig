{% extends 'base.html.twig' %}
{% block title%}
    Accueil
{% endblock %}

{% block body %}
    {% for message in app.flashes('aie') %}
        <div class="flash-notice alert alert-danger" style="text-align: center;font-size: 20px;">
            {{ message }}
        </div>
    {% endfor %}
    <style>
        *{
            margin:0;
            padding:0;
            box-sizing: border-box;
        }
        html {
            font-size: 62.5%;
        }

        h1{
            font-size: 2.6rem;
        }
        h2{
            font-size: 4.8rem;
        }
        h3{
            font-size: 3rem;
        }

        nav{
            min-height: 10vh;
            display: flex;
            align-items: center;
            width: 90%;
            margin: auto;
            padding: 2rem;
        }
        #img-accueil
        {
            position: absolute;
            top : 30%;
            left: 20%;
            margin: auto;
            padding: 2rem;
        }
        #bouton-navigation
        {
            position: absolute;
            margin: auto;
            padding:1rem;
            top : 45%;
            left: 65%;
            background-color: white;
            border-radius: 10px;
            height: fit-content;
            list-style: none;
            font-size: 15px;
        }
        a{
            color: black;
            text-decoration: none;
            font-size: 3rem;
        }
        a:hover
        {
            color: black;
        }
        li:hover
        {
            background-color: whitesmoke;
            border-radius: 10px;
        }
        body{
            height: 100%;
            overflow-y: hidden;
            margin: 0;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-image: radial-gradient(circle at 104.17% 4.55%, #abf900 0, #8ef200 16.67%, #6ee906 33.33%, #48df23 50%, #00d532 66.67%, #00cb3e 83.33%, #00c248 100%);
        }
        .img-logo-accueil
        {
            margin: 1rem;
        }
    </style>
    <container class="content">
        <img src="/images/logo.png" id="img-accueil">
        <div id="bouton-navigation">
            {{ form_start(form) }}
            {{ form_label(form.pseudo, null, {'label_attr': {'class':'form_label'}} ) }}
            {{ form_widget(form.pseudo ) }}
            <br/>
            <br>
            {{ form_label(form.mdp, null, {'label_attr': {'class':'form_label'}}) }}
            {{ form_widget(form.mdp) }}

            {{ form_rest(form) }}
            <br/>
            <br>
            <center><button type="submit" class="btn btn-success">Connexion</button></center>

            {{ form_end(form) }}
        </div>

    </container>
{% endblock %}
