{% extends 'base.html.twig' %}
{% block title%}
    Accueil
{% endblock %}

{% block body %}
    {% block stylesheets %}
        <link rel="stylesheet"  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    {% endblock %}
    <style>
        *{
            margin:0;
            padding:0;
            box-sizing: border-box;
        }
        html {
            font-size: 62.5%;
        }

        h1{
             font-size: 2.6rem;
         }
        h2{
            font-size: 4.8rem;
        }
        h3{
            font-size: 3rem;
        }

        nav{
            min-height: 10vh;
            display: flex;
            align-items: center;
            width: 90%;
            margin: auto;
            padding: 2rem;
        }
        #img-accueil
        {
            position: absolute;
            top : 30%;
            left: 20%;
            margin: auto;
            padding: 2rem;
        }
        #bouton-navigation
        {
            position: absolute;
            margin: auto;
            padding:1rem;
            top : 45%;
            left: 65%;
            background-color: white;
            border-radius: 10px;
            height: fit-content;
            list-style: none;
        }
        a{
            color: black;
            text-decoration: none;
            font-size: 3rem;
        }
        a:hover
        {
            color: black;
        }
        li:hover
        {
            background-color: whitesmoke;
            border-radius: 10px;
        }
        body{
            height: 100%;
            overflow-y: hidden;
            margin: 0;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-image: radial-gradient(circle at 104.17% 4.55%, #abf900 0, #8ef200 16.67%, #6ee906 33.33%, #48df23 50%, #00d532 66.67%, #00cb3e 83.33%, #00c248 100%);
        }
        .img-logo-accueil
        {
            margin: 1rem;
        }
    </style>
    <container class="content">
        <img src="/images/logo.png" id="img-accueil">
            <ul id="bouton-navigation">
                <li><a href="{{ adminUrl }}"><img src="/images/logo.png" class="img-logo-accueil" width="20px">Administrateur</a></li>
                <hr>
                <li><a href="{{ intervenantUrl }}"><img src="/images/logo.png" class="img-logo-accueil" width="20px">Intervenant</a></li>
                <hr>
                <li><a href="{{ etudiantUrl }}"><img src="/images/logo.png" class="img-logo-accueil" width="20px">Etudiant</a></li>
            </ul>

    </container>
{% endblock %}
